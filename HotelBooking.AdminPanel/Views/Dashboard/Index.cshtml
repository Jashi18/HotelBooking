@model HotelBooking.AdminPanel.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>Welcome, @Model.UserName (@string.Join(", ", Model.Roles))</h3>
                </div>
                <div class="card-body">
                    <h4>Your Managed Hotels</h4>

                    @if (!Model.ManagedHotels.Any())
                    {
                            <div class="alert alert-info">
                                <p>You don't have any hotels assigned to your account yet.</p>
                                <p>Please contact an administrator to have hotels assigned to you.</p>
                            </div>
                    }
                    else
                    {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Name</th>
                                            <th>Location</th>
                                            <th>Rating</th>
                                            <th>Room Count</th>
                                            <th>Active Bookings</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var hotel in Model.ManagedHotels)
                                    {
                                                <tr>
                                                    <td>@hotel.Name</td>
                                                    <td>@hotel.City, @hotel.Country</td>
                                                    <td>
                                                @for (int i = 0; i < hotel.StarRating; i++)
                                                {
                                                                <i class="fas fa-star text-warning"></i>
                                                }
                                                    </td>
                                                    <td>@hotel.RoomCount</td>
                                                    <td>@hotel.ActiveBookings</td>
                                                </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
